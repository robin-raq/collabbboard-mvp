{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "dockerfile"
  },
  "deploy": {
    "startCommand": "node src/index.js",
    "restartPolicyType": "always",
    "restartPolicyMaxRetries": 5
  },
  "variables": {
    "PORT": "3001",
    "NODE_ENV": {
      "description": "Node environment",
      "value": "production"
    }
  }
}
